@model IEnumerable<GameTime.Models.Competition>

@{
    ViewData["Title"] = "Index";
}

<h1>Competitions</h1>

<p>
    <a asp-action="Createcomp">Create New Competition</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaInterestID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultReleasedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaInterestID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionName)
            </td>
            <td>
                @{
                    if (item.StartDate == null)
                    {
                                <p>No Date Set</p>
                    }
                }
                @Convert.ToDateTime(item.StartDate).ToString("dd MMM yyyy")
            </td>
            <td>
                @{
                    if (item.EndDate == null)
                    {
                        <p>No Date Set</p>
                    }
                }
                @Convert.ToDateTime(item.EndDate).ToString("dd MMM yyyy")
            </td>
            <td>
                @{
                    if (item.ResultReleasedDate == null)
                    {
                        <p>No Date Set</p>
                    }
                }
                @Convert.ToDateTime(item.ResultReleasedDate).ToString("dd MMM yyyy")
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.CompetitionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CompetitionID }) |
                @Html.ActionLink("AddJudge", "AddJudge", new { id = item.CompetitionID }) |
                @Html.ActionLink("RemoveJudge", "RemoveJudge", new { id = item.CompetitionID }) 
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Home" asp-action="Admin">Back to Admin Page</a>
</div>