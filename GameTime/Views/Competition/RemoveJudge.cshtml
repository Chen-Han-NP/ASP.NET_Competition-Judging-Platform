@model GameTime.Models.CompetitionJudge

@{
    ViewData["Title"] = "RemoveJudge";
}
<style>
    body {
        background-color: darkviolet;
    }

    .whiteText {
        color: snow;
    }
</style>
<h1 class="whiteText">RemoveJudge</h1>

<h3 class="whiteText">Are you sure you want to delete this?</h3>
<div class="whiteText">
    <h4>CompetitionJudge</h4>
    <hr />
    <form asp-action="RemoveJudge">
        <fieldset class="FormContent">
            <legend>Are you sure to delete this record?</legend>
            <div class="form-group row">
                <select asp-for="JudgeID"
                        asp-items="@ViewData["jidList"]
 as List<SelectListItem>"
                        class="form-control"></select>
                <span asp-validation-for="JudgeID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="CompetitionID"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="CompetitionID" readonly
                           class="form-control-plaintext whiteText" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Delete"
                           class="btn btn-primary" />
                </div>
            </div>
            <div>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </fieldset>
    </form>
    </div>
