@model GameTime.Models.CompetitionJudge

@{
    ViewData["Title"] = "AddJudge";
}

<h1>AddJudge</h1>

<h4>CompetitionJudge</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @ViewData["noJudgesAvailable"]
        <form asp-action="AddJudge">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="JudgeID"
                        asp-items="@ViewData["judgeList"]
 as List<SelectListItem>"
                        class="form-control"></select>
                <span asp-validation-for="JudgeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionID" class="control-label"></label>
                <input asp-for="CompetitionID" readonly class="form-control" />
                <span asp-validation-for="CompetitionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Judge" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

