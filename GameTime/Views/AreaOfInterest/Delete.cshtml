@model GameTime.Models.AreaOfInterest

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: darkviolet;
    }

    .whiteText {
        color: snow;
    }
</style>

<h1 class="whiteText">Delete</h1>

<form asp-action="Delete">
    <fieldset class="FormContent whiteText">
        <legend>Are you sure to delete this record?</legend>
        <div class="form-group row">
            <label asp-for="AreaInterestID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="AreaInterestID" readonly
                       class="form-control-plaintext whiteText" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Name" readonly
                       class="form-control-plaintext whiteText" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Delete"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </fieldset>
</form>



