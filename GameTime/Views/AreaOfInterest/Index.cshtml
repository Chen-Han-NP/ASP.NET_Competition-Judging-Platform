@model IEnumerable<GameTime.Models.AreaOfInterest>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: darkviolet;
    }

    .whiteText {
        color: snow;
    }
</style>

<h1 class="whiteText">Area Of Interests</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateAOI">Create New Area Of Interest</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AreaInterestID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color: white;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AreaInterestID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.AreaInterestID })
                </td>
            </tr>
            
        }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Admin">Back to Admin Page</a>
</div>