@model GameTime.Models.CompetitorSubmissionViewModel

@{
    ViewData["Title"] = "UploadView";
}
<style>
    body {
        background-color: darkviolet;
    }

    .whiteText {
        color: snow;
    }
</style>


<h1 class="whiteText">UploadView</h1>
<form asp-action="UploadView" enctype="multipart/form-data">
    <fieldset class="FormContent whiteText">
        <div class="form-group row">
            <label asp-for="CompetitionId"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CompetitionId" readonly
                       class="form-control-plaintext" style="background-color:snow"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CompetitorId"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CompetitorId" readonly
                       class="form-control-plaintext" style="background-color:snow"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FileUpload"
                   class="col-sm-3 col-form-label">
                Upload Work Here
            </label>
            <div class="col-sm-9">
                <input asp-for="FileUpload" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Upload"
                       class="btn btn-primary" />
                <span style="color:red;">@ViewData["Message"]</span>
            </div>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="JoinedCompetitions">Back to List</a>
        </div>
    </fieldset>
</form>
