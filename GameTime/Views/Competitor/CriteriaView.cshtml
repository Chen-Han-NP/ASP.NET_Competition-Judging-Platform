@model IEnumerable<GameTime.Models.Criteria>

@{
    ViewData["Title"] = "View Score";
}
<style>
    body {
        background-color: darkviolet;
    }

    .whiteText {
        color: snow;
    }
</style>

<h1 class="whiteText">CriteriaView</h1>
<div>
    <a class="btn btn-primary" asp-action="Index">Back to Home</a>  
    <a class="btn btn-primary" asp-action="CompetitorViewCompetition">Available Competitions</a>  
    <a class="btn btn-primary" asp-action="JoinedCompetitions">Competitions Entered</a>
</div>

<fieldset class="FormContent">
    @*<div class="form-group row">
            <label asp-for="CompetitionID" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 form-control-plaintext whiteText">
                @Html.Display("CompetitionID")
            </div>
        </div>*@
    <div class="table-responsive">
        <table id="viewCompetitors" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Criteria ID</th>
                    <th>Criteria</th>
                    <th>Weightage</th>
                </tr>
            </thead>
            <tbody style="background-color:snow;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CriteriaID</td>
                        <td>@item.CriteriaName</td>
                        <td>@item.Weightage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</fieldset>