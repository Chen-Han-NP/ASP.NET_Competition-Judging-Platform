@model GameTime.Models.Criteria

@{
    ViewData["Title"] = "CreateCriteria";
}

<style>
    body {
        background-color: darkviolet;
    }

    .whiteText {
        color: snow;
    }
</style>

<h1 class="whiteText">Create Criteria</h1>

<hr />
<div class="row whiteText">
    <div class="col-md-4">
        <form asp-action="CreateCriteria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompetitionID" class="control-label"></label>
                <input asp-for="CompetitionID" class="form-control" />
                <span asp-validation-for="CompetitionID" class="text-danger">@ViewBag.Error</span>
            </div>
            <div class="form-group">
                <label asp-for="CriteriaName" class="control-label"></label>
                <input asp-for="CriteriaName" class="form-control" />
                <span asp-validation-for="CriteriaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weightage" class="control-label"></label>
                <input asp-for="Weightage" class="form-control" />
                <span asp-validation-for="Weightage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Criteria" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input class="btn btn-primary" type="button" value="Back to Home" onclick="location.href='@Url.Action("Index", "Judge")'" />
</div>
