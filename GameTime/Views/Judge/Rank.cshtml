            </div>
            <div class="form-group">
                <input asp-for="DateTimeSubmitted" class="form-control" hidden/>
                <span asp-validation-for="DateTimeSubmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Appeal" class="form-control" hidden/>
