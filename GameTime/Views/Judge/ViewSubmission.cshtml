@model IEnumerable<GameTime.Models.CompetitorScoreViewModel>

@{
    ViewData["Title"] = "View Submission";
}

<h1>Competitor Submission</h1>


<h3>@TempData["NoSubmission"]</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompetitorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appeal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VoteCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ranking)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitorName)
            </td>
            <td>
                @Html.ActionLink(item.Score.ToString(), "Score", new { id = item.CompetitorID + "," + item.CompetitionID })

            </td>
            <td>
                <a href="/competitorSubmissions/@item.FileSubmitted">@Html.DisplayFor(modelItem => item.FileSubmitted)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeSubmitted)
            </td>
            <td>
                @Html.ActionLink(item.Appeal, "Appeal", new { id = item.CompetitorID + "," + item.CompetitionID})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoteCount)
            </td>
            <td>
                @Html.ActionLink(item.Ranking != null ? item.Ranking.ToString() : "N/A", "Rank", new { id = item.CompetitorID + "," + item.CompetitionID + ",4" })
            </td>
        </tr>
}
    </tbody>
</table>
